@model IEnumerable<api.portal.jenn.DTO.Empresa>

@{
    ViewData["Title"] = "Lista de Empresas";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<h1>Todas as Empresas</h1>

<p>
    <a asp-action="Create">Nova Empresa</a>
</p>
<table class=" table-active col-md-12  ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoCnes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Responsavel)
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCnes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td width="100">
                @Html.DisplayFor(modelItem => item.Responsavel)
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @if (item.Ativo == 1)
                {
                    <a asp-action="Desativar" asp-route-id="@item.EmpresaID">Des</a>
                }
                else
                {
                    <a asp-action="Desativar" asp-route-id="@item.EmpresaID">Lig</a> 

                }|
                <a asp-action="Edit" asp-route-id="@item.EmpresaID">Edição</a> |
                <a asp-action="Details" asp-route-id="@item.EmpresaID">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.EmpresaID">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>
