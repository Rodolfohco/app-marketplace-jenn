@model IEnumerable<crud.ui.portal.jenn.Models.EmpresaViewModel>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista</h1>

<p>
    <a asp-action="Novo">Nova Empresa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone1)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ImgemFrontEmpresa)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.maps)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Responsavel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone1)
            </td>
            @*<td>
                <img src="@item.ImgemFrontEmpresa" alt="@item.ImgemFrontEmpresa" width="50" height="60" />
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.maps)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Responsavel)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.EmpresaID}) |
                @Html.ActionLink("Details", "Details", new {  id= item.EmpresaID }) |
                @Html.ActionLink("Delete", "Delete", new {  id= item.EmpresaID })
            </td>
        </tr>
}
    </tbody>
</table>
