@model api.portal.jenn.DTO.Plano

    <form asp-controller="Convenio" asp-action="NovoPlano" class="form-horizontal">
        <input type="hidden" value="@ViewBag.ConvenioID" id="ConvenioID" />

        <fieldset>
            <div class="panel panel-primary">
                <div class="panel-heading">Incluir Plano para o Convenio - @ViewBag.Convenio</div>

                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-11 control-label">
                            <p class="help-block"><h11>*</h11> Campo Obrigatório </p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Nome">Plano  <h11>*</h11></label>
                        <div class="col-md-8">
                            <input id="Nome" asp-for="Nome" name="Nome" placeholder="" class="form-control input-md"  type="text">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Cadastrar"></label>
                        <div class="col-md-8">
                            <a id="Cadastrar" name="Cadastrar" class="btn btn-success">Adicionar</a>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
   

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
