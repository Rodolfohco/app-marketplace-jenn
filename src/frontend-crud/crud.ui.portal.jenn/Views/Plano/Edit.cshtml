@model api.portal.jenn.DTO.Plano

@{
    ViewData["Title"] = "Editar Plano";
    Layout = "~/Views/Shared/_LayoutConvenio.cshtml";
}


<form asp-controller="Plano" asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="PlanoID" />
    
    <fieldset>
        <div class="panel panel-primary">
            <div class="panel-heading">Edição de Plano </div>

            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-11 control-label">
                        <p class="help-block"><h11>*</h11> Campo Obrigatório </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="Nome">Nome do Plano <h11>*</h11></label>
                    <div class="col-md-8">
                        <input id="Nome" asp-for="Nome" name="Nome" placeholder="" class="form-control input-md" type="text">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="Cadastrar"></label>
                    <div class="col-md-8">
                        <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit">Salvar</button>
                        <a class="btn btn-info" asp-action="Index">Voltar Para a Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
