@model api.portal.jenn.DTO.Convenio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutConvenio.cshtml";
}

<form asp-controller="Convenio" asp-action="Create" method="post" class="form-horizontal">
    <fieldset>
        <div class="panel panel-primary">
            <div class="panel-heading">Cadastro de um Novo Convenio</div>

            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-11 control-label">
                        <p class="help-block"><h11>*</h11> Campo Obrigatório </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="Nome">Nome do Convenio <h11>*</h11></label>
                    <div class="col-md-8">
                        <input id="Nome" asp-for="Nome" name="Nome" placeholder="" class="form-control input-md"  type="text">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="Cadastrar Novos Planos"></label>

                    <div class="col-sm-3 my-1">
                        <label class="sr-only" for="inlineFormInputGroupPlano">Plano</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"> </div>
                            </div>
                            <input type="text" class="form-control" id="inlineFormInputGroupPlano" placeholder="Plano">
                        </div>
                    </div>
                    <div class="col-auto my-1">
                        <button type="submit" class="btn btn-primary">Adicionar</button>
                    </div>
                </div>
                    <div class="col-md-8">

                        <div class="row">
                            <div class="col-4">
                                <div class="list-group" id="list-tab" role="tablist">
                                    <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Home</a>
                                    <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Profile</a>
                                    <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Messages</a>
                                    <a class="list-group-item list-group-item-action" id="list-settings-list" data-toggle="list" href="#list-settings" role="tab" aria-controls="settings">Settings</a>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">...</div>
                                    <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">...</div>
                                    <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
                                    <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">...</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Cadastrar"></label>
                        <div class="col-md-8">
                            <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit">Cadastrar</button>
                            <button id="Cancelar" name="Cancelar" class="btn btn-danger" asp-action="Index" type="Reset">Cancelar e Voltat</button>
                        </div>
                    </div>
                </div>
             
    </fieldset>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
