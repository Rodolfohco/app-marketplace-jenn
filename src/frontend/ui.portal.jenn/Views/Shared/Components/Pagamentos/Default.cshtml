@model List<string>

<div class="content-select">
    <div class="search">
        <input onkeyup="pesquisar('pesquisapagamento', 'checkpagamento_','data-pagamento')" id="pesquisapagamento" type="text" placeholder="Pesquisar" />
    </div>
    <div class="list-check">
        @if (Model.Any())
        {
            int i = 0;
            @foreach (var item in Model)
            {
                <div class="content-list">
                    <input onclick="apliqueCount('checkpagamento_','apliquepagamento')" id="checkpagamento_@i" class="form-check-input" type="checkbox" value="" data-pagamento="@item.ToLower()">
                    <label class="form-check-label" for="defaultCheck1">
                        @item
                    </label>
                </div>
                i++;
            }

            <div class="action-list">
                <a href="" class="link">
                    Cancelar
                </a>
                <a onclick="buscarporpagamentos()" id="apliquepagamento" class="btn btn-secondary">
                    Aplique(0)
                </a>
            </div>
        }
    </div>
</div>


<script src="/js/general.js"></script>
<script src="/js/pagamentos.js"></script>

