@model ui.portal.jenn.ViewModel.PesquisaViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" crossorigin="anonymous">
    <link rel="stylesheet" href="css/icon-font.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="css/main.css">
    <link rel="shortcut icon" type="image/x-icon" href="img/icones/favicon.ico">

    <title>Jenn</title>
</head>

<body>


    <header class="header">
        <div class="row">
            <div class="col-xl-6 col-lg-4 col-md-5 col-6">
                <h1>
                    <div class="header__background">
                        <a href="@Url.Action("Inicio", "Home")" title="Jenn">
                            <img class="header__background--logo" src="img/logo-jenn.png" alt="Logotipo Jenn" />
                        </a>
                    </div>
                </h1>
            </div>
            <div class="col-xl-5 offset-xl-1 col-lg-7 col-md-7 col-6">
                @await Component.InvokeAsync("TopoControleLink")
            </div>
        </div>
    </header>
    @if (ViewBag.Message != null)
    {
        <div class="col-xl-9 col-lg-7 col-md-7 col-6">
            <div class="row">
                <label class="form-check-label" for="defaultCheck2">
                    @ViewBag.Message
                </label>

            </div>
        </div>
    }

    <main class="main">
        <section class="home">
            <div class="row">
                <div class="col-xl-6 col-lg-10 col-md-12">
                    <div class="row">
                        <div class="col-xl-7 col-lg-7 col-md-6">
                            <h2>Agende ou <br />compre seus  <br />exames e <br />vacinas online</h2>
                        </div>
                        <div class="col-xl-5 col-lg-5 col-md-6">
                            <h3>Seja atendido <br /><span>em casa</span> ou <br /> na clínica<br /><span>sem filas.</span> </h3>
                            <img src="img/selo.png" alt="" class="img-selo" />
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12">
                            <div class="row">
                                <div class="box-search">
                                    <div class="form">
                                        <form asp-controller="Home" method="post" asp-action="Pesquisa">

                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-xl-6 col-lg-6 col-md-5">
                                                        <input type="text" class="form-control" id="lista" placeholder="Qual exame ou vacina você procura?" asp-for="Produto" />
                                                    </div>
                                                    <div class="col-xl-4 col-lg-4 col-md-5">
                                                        <input type="text" class="form-control" id="local" placeholder="Em qual local?" asp-for="Localidade" />

                                                    </div>
                                                    <div class="col-xl-2 col-lg-2 col-md-2">
                                                        <button type="submit" class="btn btn-primary mb-2"><img src="img/lupa.png" alt="" /></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="col-xl-12 col-lg-12 col-md-12">
                                            @await Component.InvokeAsync("ListaTipoProcedimento", Model.tipoProcedimentoViewModels)
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12">
                            <h4>Destaques para você</h4>
                            @await Component.InvokeAsync("ListaDestaqueTelaInicial" )
                          
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="row">
            <div class="col-xl-6 col-lg-12 col-md-12">
                @await Component.InvokeAsync("FooterParte1")

            </div>
            <div class="col-xl-5 offset-xl-1  right-side col-lg-12 col-md-12">
                @await Component.InvokeAsync("FooterParte2")
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/script.js"></script>

</body>
</html>